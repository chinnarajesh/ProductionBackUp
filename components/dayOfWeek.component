<apex:component access="global" >
    <apex:attribute access="global" name="dowElement" description="Day of Week elements" type="core_UtilDays" required="true"/>
    <table style="width: 50%"> <tr>
		<td><apex:outputLabel value="Mon" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Tue" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Wed" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Thu" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Fri" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Sat" style="font-weight:bold"/></td>
		<td><apex:outputLabel value="Sun" style="font-weight:bold"/></td>
    </tr>
	<tr>
        <td><apex:inputCheckbox value="{!dowElement.Mon}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Tue}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Wed}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Thu}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Fri}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Sat}"/></td>
		<td><apex:inputCheckbox value="{!dowElement.Sun}"/></td>
    </tr>
	</table> 
</apex:component>